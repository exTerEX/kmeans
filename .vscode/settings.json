{
    "files.exclude": {
        "**/.git": true,
        "**/*.egg-info": true
    },
    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Args": [
        "--aggressive",
        "--experimental",
        "--max-line-length=99"
    ],
    "python.sortImports.args": [
        "--py=37",
        "--skip-gitignore"
    ],
    "cmakeFormat.args": [
        "--enable-sort",
        "--keyword-case=upper",
        "--command-case=upper",
        "--line-ending=unix",
        "--line-width=100"
    ],
    "cmake.configureOnEdit": false
}