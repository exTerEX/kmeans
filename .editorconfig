root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[*.{c,cpp,cxx,h,hpp,hxx}]
indent_size = 4
indent_style = space
insert_final_newline = true

[{CMakeLists.txt,*.cmake.in,*.cmake}]
indent_size = 2
indent_style = space
insert_final_newline = false

[*.{md,rst}]
insert_final_newline = false

[*.yml]
indent_size = 2
indent_style = space
insert_final_newline = false

[*.{py,pxd,pyx}]
indent_size = 4
indent_style = space
